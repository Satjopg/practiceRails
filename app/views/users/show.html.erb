<%= provide(:title, "Show") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user) %>
        <%= @user[:name] %>
      </h1>
      <p>
        <%= @user[:username]%>
      </p>
      <ul>
        <li>
          email: <%= @user[:mail] %>
        </li>
        <li>
          location: <%= @user[:location] %>
        </li>
        <li>
          About: <%= @user[:about] %>
        </li>
      </ul>
    </section>
  </aside>
</div>
